# Firebase Configuration
# Obtenha estas credenciais em: https://console.firebase.google.com/
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Gemini API (Opcional - para IA)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Aplicação
VITE_APP_NAME=FlashDelivery
VITE_APP_VERSION=1.1.0
VITE_NODE_ENV=development

# Mapas (Leaflet usa OpenStreetMap por padrão - sem chave necessária)
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# WhatsApp (Opcional)
VITE_WHATSAPP_BUSINESS_API_KEY=your_whatsapp_api_key_here
VITE_WHATSAPP_PHONE_ID=your_phone_id_here

# Socket Service (Timeout em ms)
VITE_SOCKET_TIMEOUT=5000

# API Base URL (se usar backend externo)
VITE_API_BASE_URL=http://localhost:3000
